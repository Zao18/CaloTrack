<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Date and Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSummaryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November 18, 2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Status Indicator: Will be colored in the Activity code -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Goal Achieved (Below Goal)"
                android:textSize="12sp"
                android:textColor="#22C55E" />

        </LinearLayout>

        <!-- Calorie Count and Progress Bar (Styled like a mini-tracker) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvCalorieSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1450 / 1800 kcal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <ProgressBar
                android:id="@+id/dailyProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="120dp"
                android:layout_height="8dp"
                android:max="100"
                android:progress="70"
                android:progressTint="#22C55E"
                android:backgroundTint="#E0E0E0" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>